
@{
    ViewData["Title"] = "Register";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/Register.css" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <div class="login-title">
        <h1>Common Movies</h1>
    </div>
    <form>
        <h1>User Register</h1>
        <div class="inset">
            <p>
                <label for="email">First Name</label>
                <input type="text" id="firstName">
            </p>
            <p>
                <label for="email">Last Name</label>
                <input type="text" id="lastName">
            </p>
            <p>
                <label for="email">Nickname</label>
                <input type="text" id="nickName">
            </p>
            <p>
                <label for="email">TC Cred Number</label>
                <input type="text" id="tck">
            </p>
            <p>
                <label for="email">Birth Year</label>
                <input type="text" id="birthYear">
            </p>
            <p>
                <label for="email">Email</label>
                <input type="text" id="email">
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password">
            </p>
        </div>
        <p class="p-container">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="div-button">
                            <button class="btn btn-outline btn-lg" type="submit" id="btnSubmit">Register</button>
                        </div>
                    </div>
                    <div class="col login-btn">
                        <div class="container">
                            <div class="row">
                                <p class="login-p">Already Have An Account?</p>
                            </div>
                            <div class="row div-button">
                                <button class="btn btn-outline btn-lg" type="submit" id="login">Login</button>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </p>
    </form>
</body>
</html>

<script>
    $('#login').click(function (e) {
        e.preventDefault();
        login();
    });

    function login() {
        window.location.href = "/User/Login";
    }
</script>

<script>
        $('#btnSubmit').click(function (e) {
            e.preventDefault();
            register();
        });

    function register() {
        var firstName = $("#firstName").val();
        var lastName = $("#lastName").val();
        var birthYear = $("#birthYear").val();
        var tck = $("#tck").val();
        var nickName = $("#nickName").val();
        var email = $("#email").val();
        var password = $("#password").val();

            $.ajax({
                url: '@Url.Action("Register", "User")',
                data: {
                    firstName,
                    lastName,
                    nickName,
                    birthYear,
                    tck,
                    email,
                    password
                },
                method: "POST",
                success: (response) => {
                    if (response == true) {
                        window.alert("You registered successfully.");
                        window.location.href = "/User/Login";
                    }
                    else if (response == false) {
                        window.alert("Wrong Informations");
                    }
                },
                error: (xhr) => {
                    console.log(xhr);
                }
            })
        }
</script>


